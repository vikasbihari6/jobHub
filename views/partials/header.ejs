            </ul>
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/jobs/new">Add a new job</a>
              </li>
              <% if(!currentUser){ %>
                <li class="nav-item">
                  <a class="nav-link" href="/login">Login</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/register">Register</a>
                </li>
              <% }else{ %>
                <li class="nav-item">
                  <a class="nav-link" href="/user/<%= currentUser._id %>"><%= currentUser.username %></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/logout">Logout</a>
                </li>
              <% } %>
            </ul>
          </div>
